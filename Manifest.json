{
    "name": "automate retriggering pipeline",
    "version": "1.0",
    "description": "Add button to retrigger pipeline",
    "manifest_version": 2,
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "all_frames": false,
        "js": ["content.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "permissions": ["http://*/*", "https://*/*", "http://localhost:8000/*", "storage", "tabs"]
  }